@model BOL.vw_ERP_UserDetails

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (TempData["Msg"] != null)
{
    <div class="alert alert-dismissible alert-info">
        <button class="close" type="button" data-dismiss="alert">&times;</button>
        <h3> @TempData["Msg"].ToString()</h3>
    </div>

}

    @*<h2>Login</h2>*@

    @using (Html.BeginForm("SignIn", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <style type="text/css">
            .control-label {
                text-align: left !important;
                padding-left: 0 !important;
            }

            .form-group {
                margin-bottom: 5px !important;
            }

            .form-horizontal {
                margin-left: 50% !important;
            }

            .signIn {
                width: 100%;
            }

            .form-control {
                width: 100%;
            }

            .empty-row {
                height: 10px;
            }

            .heading {
                font-size: 25px;
                text-align: center !important;
                font-weight: 600;
                color: #e95420;
            }

            .main-div {                
                padding: 10px;
                width: 100%;
            }
        </style>
        <script type="text/javascript">
            window.onload = function () {
                document.getElementById("UserId").focus();
            }

        </script>
        <br /><br />
        <div class="main-div">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-6 control-label heading">
                        Login
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 empty-row">
                    </div>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.UserId, "User Id", htmlAttributes: new { @class = "control-label col-md-6" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.UserId, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-6" })
                    </div>
                </div>


                <div class="form-group">

                    <div class="col-md-6">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6 empty-row">
                    </div>
                </div>
                @*col-md-offset-2  col-md-offset-2 *@
                <div class="form-group">
                    <div class="col-md-6">
                        <input type="submit" value="Sign In" class="btn btn-primary signIn" id="btnSignIn" />
                        @* @Html.ActionLink("Alternate Authorized Executives", "WindowLogin", "Login", new { user = "Prasanna", IsAlterNative=true }, null)*@
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 empty-row">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.ActionLink("Authorized Executives", "WindowLogin", "Login", new { user = "prasanna", IsAlterNative = false }, null)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6">
                        @Html.ActionLink("Alternate Authorized Executives", "WindowLogin", "Login", new { user = "prasanna", IsAlterNative = true }, null)
                    </div>
                </div>
            </div>
        </div>
        <br /><br />
    }
