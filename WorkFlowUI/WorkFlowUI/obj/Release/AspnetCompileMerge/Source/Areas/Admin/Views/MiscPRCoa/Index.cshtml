@if (ViewBag.Controller != "DocumentStatus")
{
    <h3>Budget Summary</h3>


    <table class="table table-striped table-bordered table-hover ">
        <tr class="info">
            <th>Doc. No.</th>
            <th>Project/Sales Grp/Cost Ctr</th>
            <th>Description</th>
            <th>GL Account</th>
            @*<th>Account Name</th>*@
            <th>Original Budget (A)</th>
            <th>Supp. Budget (B) </th>
            <th>Committed + Actual Budget (C)</th>
            <th>This Exp. (D)</th>
            <th>Total Bal. Budget (E=[A+B]-[C+D])</th>

        </tr>

        @foreach (var COA in Model.CoaBudget)
        {
        <tr>
            <td>@COA.DocNo</td>

            <td>
                @*<a target="_blank" href=@COA.COACostCentreName> @COA.COACostCentreName </a>*@
                @*@Html.ActionLink(@COA.COACostCentreName, "Index", "BudgetSummary", new { id = @COA.COACostCentreName }, new { target = "_blank" })*@
                @if (ViewBag.DocNo.ToString().StartsWith("PR-P"))
                    {
                    @Html.ActionLink(@COA.ObjectNo, "RouteDocNo", new { id = @COA.ObjectNo })
                    }
                    else
                    {
                    @COA.ObjectNo
                    }

            </td>
            <td>
                @COA.ObjectName
            </td>

            <td>
                @COA.AccountNo
            </td>

            @*<td>
                    @COA.ChartOfAccountSetDetailDescription
                </td>*@
            <td>
                @*@COA.SecondaryEntityBudgetApproved*@
                @if (@COA.OrginalBudget != null)
                    {
                        var orginalbudget = Convert.ToDecimal(@COA.OrginalBudget).ToString("#,##0.00");
                    @Html.DisplayFor(m => orginalbudget)
                    }
            </td>
            <td>
                @*@COA.SupplementaryBudget1Approved*@
                @if (@COA.SuppBudget != null)
                    {
                        var suppbudget = Convert.ToDecimal(@COA.SuppBudget).ToString("#,##0.00");
                    @Html.DisplayFor(m => suppbudget)
                    }
            </td>

            <td>
                @*@COA.CommitPlusActual*@
                @if (@COA.CommitBudget + COA.ActualBudget != null)
                    {
                        var CommitPlusActual = Convert.ToDecimal(@COA.CommitBudget + COA.ActualBudget).ToString("#,##0.00");
                    @Html.DisplayFor(m => CommitPlusActual)
                    }
            </td>

            <td>
                @* @COA.GrandTotalInLocalCurrency*@
                @if (@COA.ThisExp != null)
                    {
                        var thisexp = Convert.ToDecimal(@COA.ThisExp).ToString("#,##0.00");
                    @Html.DisplayFor(m => thisexp)
                    }
            </td>

            <td>
                @* @COA.BalanceBudgetAmount*@
                @if (@COA.BalBudget != null)
                    {
                        var BalanceBudgetAmount = Convert.ToDecimal(@COA.BalBudget).ToString("#,##0.00");
                    @Html.DisplayFor(m => BalanceBudgetAmount)
                    }
            </td>



        </tr>
        }

    </table>
}

<h3>Purchase Requisition Detail</h3>


<table class="table table-striped table-bordered table-hover ">
    <tr class="success">
        <th>PR No</th>
        <th>Item</th>
        <th>Part No / Description</th>
        <th>Cost Object</th>
        <th>Cost Object No</th>
        <th>GL Account</th>
        @*<th>Account Name</th>*@
        <th>Qty</th>
        <th>UOM</th>
        <th>Unit Price</th>
        <th>Currency</th>
        <th>Net Price</th>
        <th>Net Price Local</th>
        <th>Cost Center</th>
        <th>Desired Vendor</th>
        <th>PO Number</th>
    </tr>

    @foreach (var MiscPR in Model.MiscPRBudet)
    {
        <tr>

            <td>
                @MiscPR.DocNo
            </td>

            <td>
                @MiscPR.SequenceNo
            </td>
            <td>
                @if (!string.IsNullOrEmpty(@MiscPR.ItemNo))
                {
                    @MiscPR.ItemNo
                    if (!string.IsNullOrEmpty(@MiscPR.ItemDescription))
                    {
                        @Html.Raw(" - ")
                    }
                }
                @MiscPR.ItemDescription
            </td>

            <td>
                @MiscPR.SourceObject
            </td>
            <td>
                @MiscPR.SourceObjectNo
            </td>
            <td>
                @MiscPR.AccountNo
            </td>
            @*<td>
                    @MiscPR.ChartOfAccountSetDetailDescription
                </td>*@
            <td>
                @MiscPR.Quantity
            </td>
            <td>
                @MiscPR.UOM
            </td>
            <td>
                @*@MiscPR.UnitPrice*@

                @if (@MiscPR.UnitPrice != null)
                {
                    var unitprice = Convert.ToDecimal(@MiscPR.UnitPrice).ToString("#,##0.00");
                    @Html.DisplayFor(m => unitprice)
                }

            </td>
            <td>
                @MiscPR.Currency
            </td>
            <td>
                @*@MiscPR.NetPrice*@

                @if (@MiscPR.NetPrice != null)
                {
                    var netprice = Convert.ToDecimal(@MiscPR.NetPrice).ToString("#,##0.00");
                    @Html.DisplayFor(m => netprice)
                }
            </td>
            <td>
                @*@MiscPR.NetPriceLocal*@

                @if (@MiscPR.NetPriceLocal != null)
                {
                    var netpricelocal = Convert.ToDecimal(@MiscPR.NetPriceLocal).ToString("#,##0.00");
                    @Html.DisplayFor(m => netpricelocal)
                }
            </td>

            <td>
                @MiscPR.CostCenter
            </td>
            <td>
                @MiscPR.VendorName
            </td>
            @if (!MiscPR.PRNO.Contains(docNo))
            {
                <td>@MiscPR.PRNO</td>
            }
            else
            {
                <td>-</td>
            }
        </tr>
    }

</table>

